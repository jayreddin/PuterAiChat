{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "client/dist",
          "buildCommand": "npm run build"
        }
      },
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/index.ts" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "client/dist/index.html" }
    ]
  }