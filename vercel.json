{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "client/dist"
      }
    },
    {
      "src": "server/index.ts", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/server/index.ts" 
    },
    { 
      "src": "/(.*\\.(js|css|ico|png|jpg|svg|json))", 
      "dest": "/client/dist/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/client/dist/index.html" 
    }
  ]
}